<% cart_presenter = CartPresenter.new(@current_cart).to_hash %>
<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <p><span class="h2">Shopping Cart </span><span class="h4">(<%= cart_presenter[:total_line_items] %> item in your cart)</span></p>

        <div class="card mb-4">
          <% cart_presenter[:line_items].each do |line_item| %>
            <%= render 'cart_line_item', line_item: line_item %>
          <% end %>
        </div>

        <div class="card mb-5">
          <div class="card-body p-4">
            <div class="float-end">
              <p class="mb-0 me-5 d-flex align-items-center">
                <span class="small text-muted me-2">Order total:</span> <span
                  class="lead fw-normal"><%= cart_presenter[:total] %></span>
              </p>
            </div>
          </div>
        </div>

        <div class="d-flex justify-content-end">
          <%= link_to "Continue shopping", root_path, class:"btn btn-light btn-lg me-2" %>
          <%= link_to "Checkout", new_order_path, class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</section>
